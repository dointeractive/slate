  "promotion_cards": [
    {
      "id": 41,
      "title": "название",
      "short_description": "короткое описание в одну фразу",
      "description": "полное описание, которое <b>может</b содержать HTML>",
      "background_color": "#000000",
      "text_color": "#FFFFFF",
      "image_url": "http://",
      "type": "link",
      "promotion_id": null,
      "link": "instamart://retailer/15/products/2345",
