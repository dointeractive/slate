  "number": "R307128032",
  "item_total": 0.0,
  "total": 0.0,
  "ship_total": 0.0,
  "state": "cart",
  "adjustment_total": 0.0,
  "user_id": 1,
  "created_at": "2014-07-06T18:52:33.724Z",
  "updated_at": "2014-07-06T18:52:33.752Z",
  "completed_at": null,
  "shipment_state": null,
  "payment_state": null,
